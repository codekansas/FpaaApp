<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.judgingmoloch.ftdiweb.RunCodeFragment">

        <!-- Holds connection status information -->

        <TextView
            android:id="@+id/connection_status"
            android:textSize="@dimen/default_text_size"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <!-- Selection spinners for setting connection parameters -->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                android:width="@dimen/text_view_width"
                android:text="@string/baud_rate"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/baud_rate_spinner"
                android:layout_gravity="end"
                android:layout_width="@dimen/spinner_width"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                android:width="@dimen/text_view_width"
                android:text="@string/stop_bit"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/stop_bit_spinner"
                android:layout_gravity="end"
                android:layout_width="@dimen/spinner_width"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                android:width="@dimen/text_view_width"
                android:text="@string/data_bit"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/data_bit_spinner"
                android:layout_gravity="end"
                android:layout_width="@dimen/spinner_width"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                android:width="@dimen/text_view_width"
                android:text="@string/parity_bit"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/parity_bit_spinner"
                android:layout_gravity="end"
                android:layout_width="@dimen/spinner_width"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                android:width="@dimen/text_view_width"
                android:text="@string/flow"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/flow_spinner"
                android:layout_gravity="end"
                android:layout_width="@dimen/spinner_width"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center_vertical"
                android:width="@dimen/text_view_width"
                android:text="@string/port"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/port_spinner"
                android:layout_gravity="end"
                android:layout_width="@dimen/spinner_width"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/status_text"
            android:textSize="@dimen/default_text_size"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <!-- Connect to device button -->

        <Button
            android:id="@+id/connect"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/default_text_size"
            android:text="@string/connect" />

        <!-- Read instructions button -->

        <EditText
            android:id="@+id/bytes_to_write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/bytes_to_write" />

        <Button
            android:id="@+id/write_device"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/default_text_size"
            android:text="@string/write" />

        <Button
            android:id="@+id/read_device"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/default_text_size"
            android:text="@string/read" />

        <Button
            android:id="@+id/run_both"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/default_text_size"
            android:text="@string/read_and_write" />

        <!-- Output -->

        <TextView
            android:id="@+id/output"
            android:textSize="@dimen/default_text_size"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>