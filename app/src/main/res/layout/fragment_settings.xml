<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.judgingmoloch.ftdiweb.settings.SettingsFragment"
    android:orientation="vertical">

    <Button
        android:id="@+id/save_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_button" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/connection_url_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_textbox_height"
            android:textSize="@dimen/default_text_size"
            android:gravity="center"
            android:text="Connection URL" />

        <EditText
            android:id="@+id/connection_url"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/default_textbox_height"
            android:layout_toRightOf="@id/connection_url_label"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/default_text_size"
            android:inputType="textUri" />

    </RelativeLayout>

</LinearLayout>
